<hr>
    <div class="d-flex justify-content-between align-items-center">
        <p><strong>Outgoing requests</strong></p>
        <%= link_to "+ Invite", invite_group_path, class: "btn btn-primary btn-sm rounded-pill" %>
    </div>
    <table class="table table-striped table-sm table-hover">
        <thead>
            <td>ID</td>
            <td>User</td>
            <td></td>
        </thead>
        <tbody class="table-group-divider">
            <% outgoing_requests.each do |request| %>
                <tr>
                    <td><%= request.id %></td>
                    <td><%= request.user.email %></td>
                    <td><%= button_to "Cancel", cancel_request_path(request), method: :delete, class: "btn btn-secondary btn-sm rounded-pill" %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <hr>
    <p><strong>Incoming requests</strong></p>
    <table class="table table-striped table-sm table-hover">
        <thead>
            <td>ID</td>
            <td>User</td>
            <td>Message</td>
            <td></td>
        </thead>
        <tbody class="table-group-divider">
            <% incoming_requests.each do |request| %>
                <tr>
                    <td><%= request.id %></td>
                    <td><%= request.user.email %></td>
                    <td><%= request.message %></td>
                    <td>
                        <div class="d-flex">
                            <%= button_to "Approve", approve_request_path(request), method: :patch,  class: "btn btn-success btn-sm rounded-pill" %>
                            <%= button_to "Reject", reject_request_path(request), method: :patch, class: "btn btn-info btn-sm rounded-pill" %>
                        </div>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
<hr>