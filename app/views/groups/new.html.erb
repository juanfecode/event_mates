<%= simple_form_for @group do |f| %>
    <%= f.input :bio %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :event, value: @event %>
    <%= f.input :user,
                   collection: @users,
                   as: :check_boxes,
                   label_method: :email,
                   value_method: :id,
                   input_html: { class: "form-check-input" },
                   item_wrapper_class: "form-check" %>
    <%= f.submit %>
<% end %>