<%= turbo_frame_tag "remote_modal" do %>
    <%= render ModalComponent.new(title: "Example") do %>
        
        <% if @type == "ask" %>
            <%= simple_form_for [@group, @request], url: ask_to_join_path, method: :post, data: { turbo_frame: '_top' } do |f| %>
                <%= f.input :message %>
                <%= f.submit %>
            <% end %>
        <% elsif @type == "rejoin" %>
            <%= simple_form_for [@group, @request], url: ask_to_rejoin_path, method: :patch, data: { turbo_frame: '_top' } do |f| %>
                <%= f.input :message, input_html: { value: "" } %>
                <%= f.submit %>
            <% end %>
        <% end %>
        
    <% end %>        
<% end %>